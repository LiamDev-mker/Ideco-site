---
const {title, image, description} = Astro.props;
---

<div class="flex flex-col items-center justify-center w-full p-8 bg-white border border-gray-300 rounded-lg shadow-sm h-80">
    <strong class="ml-2 text-lg text-center text-primaryBg">{title}</strong>
    <img src={image} class="object-contain w-20 h-20 mb-2" />
    <ul class="text-left text-gray-700 list-disc list-inside">
        {description.map((item: string) => (
            <li>{item}</li>
        ))}
    </ul>
</div>